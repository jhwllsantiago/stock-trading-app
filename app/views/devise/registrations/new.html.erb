<div class="sign-up-container">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'sign-up-form', 'target' => 'signup'}) do |f| %>

  <div class="sign-up-content">

    <div class="sign-up-header">
      <p>ATLAS</p>
      <%= image_tag("ai3.png", :class => "sign-up-logo") %>
      <p>INDEX</p>
      <div class="sign-up-errors">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    </div>

    <div class="sign-up-body">


      <h2 class="sign-up-title">Sign up</h2>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
        <p>Already have an account? <%= link_to "Log in", unauthenticated_root_path%></p>
      </div>

    



    <% end %>

    <%#= render "devise/shared/links", locals: { myclass: 'sign-up-links' } %>

    </div>
  </div>
</div>