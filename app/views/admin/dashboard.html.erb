<div class='admin-dashboard'>
<%= render "user_nav" %>

<div class='admin-container'>

<div class='admin-features'>
  
  <%= link_to new_user_registration_path do %>
  <div class='admin-feature add-user-btn'>
    <%= image_tag("add-user.png", :class => "feature-icon") %>
    <span class='admin-feature-link'><strong>Add User</strong></span>
  </div>
  <% end %>

  <div class='admin-feature add-user-btn'>
    <%= link_to image_tag("logs.png", :class => "feature-icon"), admin_transactions_path %>
    <strong><%= link_to "Transactions", admin_transactions_path, class: 'admin-feature-link' %></strong>
  </div>

  <div class='admin-feature'>
    <%= image_tag("report.png", :class => "feature-icon") %>
    <strong><span>Reports</span></strong>
  </div>

  <div class='admin-feature'>
    <%= image_tag("tool.png", :class => "feature-icon") %>
    <strong><span>Tools</span></strong>
  </div>

  <div class='admin-feature'>
    <%= image_tag("setting.png", :class => "feature-icon") %>
    <strong><span>Settings</span></strong>
  </div>

</div>

<div class='users-container'>
  <div class='users-headers'>
    <h2>First Name</h2>
    <h2>Last Name</h2>
    <h2>Email</h2>
    <h2 class='users-headers-status'>Status</h2>
    <h2 class='users-headers-actions'>Actions</h2>
  </div>
  <div class='user-container'>
  <% @users.each do |user| %>
    <%= render "user_row", user: user %>
  <% end %>
  </div>
</div>

</div>
</div>