

<nav class="stock-index-nav">
  <%= image_tag("ai3.png", :class => "stock-index-logo") %>
  <div class="stock-index-nav-middle">
    <p>My portfolio</p>
    <p>|</p>
    <p>Mutual funds</p>
    <p>|</p>
    <p>Support</p>
    <p>|</p>
    <p>Media</p>
  </div >
  <div class"stock-index-nav-right">
    <%= button_to "Sign out", destroy_user_session_path, :method => :delete %>
  </div>
</nav>


<div class="stock-index-main">
  <div class="stock-index-container">
    <div class="stock-index-table">
      <div class ="stock-index-name">
        <h1>STOCK</h1>
        <% @stocks.each do |stock| %>
          <%= link_to render("stock_row", stock: stock), stock_turbo_show_path(stock), remote: true, data: {"turbo-method": :get, "turbo_frame": "stock_frame"}%>
        <% end %>
      </div>
    </div>
  <div class="stock-index-order">
      <h1>ORDER BOOK</h1>
      <div class="stock-index-order-buy">
        <div class="buy-column">
        <h1>ORDER</h1>
        <% @buys.each do |order| %>
          <p><%=  order.action %></p>
        <% end %>
        </div>
        <div class="buy-column">
        <h1>PRICE</h1>
        <% @buys.each do |order| %>
          <p><%=  order.price %></p>
        <% end %>
        </div>
        <div class="buy-column">
        <h1>QUANTITY</h1>
        <% @buys.each do |order| %>
          <p><%=  order.quantity %></p>
        <% end %>
        </div>
      </div>
      <div class="stock-index-order-sell">
        <div class="sell-column">
          <h1>ORDER</h1>
          <% @sells.each do |order| %>
            <p><%=  order.action %></p>
          <% end %>
        </div>
        <div class="sell-column">
          <h1>PRICE</h1>
          <% @sells.each do |order| %>
            <p><%=  order.price %></p>
          <% end %>
        </div>
        <div class="sell-column">
          <h1>QUANTITY</h1> 
          <% @sells.each do |order| %>
            <p><%=  order.quantity %></p>
          <% end %>
        </div>  
      </div>
  </div>
  <div>
  </div>
</div>

<div class='stock-index-trade-order'>
  <div class="stock-trade-container">
    <%= render "stock_trade_form", stock: nil %>
  </div>

  <div class="transactions-container">
      <h1>TRANSACTIONS</h1>
      <div class="transaction-details">
        <div class="transaction-details-header">
          <h3>PRICE</h3>
          <h3>QUANTITY</h3>
          <h3>ORDERED</h3>
        </div>
        <% @transactions.each do |transaction| %>
        <div class="transaction-row">
          <p><%= transaction.price %></p>
          <p><%= transaction.quantity %></p>
          <p><%= transaction.created_at.strftime("%H:%M:%S %a %m, %e") %></p>
        </div>
      <% end %>
      </div>
  </div>
</div>

</div>
